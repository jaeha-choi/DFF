# Game client directory, where league of legends is installed.
CLIENT_DIRECTORY=C:/Riot Games/League of Legends

# Enable automatic rune fetch
ENABLE_RUNE=true

# Enable automatic item fetch
ENABLE_ITEM=true

# Enable automatic spell fetch
ENABLE_SPELL=true

# Polling interval in seconds. Value from 1 ~ 5 can be set. 2 is reasonable
INTERVAL=2

# If youre using left slot (D spell) for flash, set as true.
# If youre using right slot (F spell) for flash, set as false.
# This option only works if Flash is a recommended spell
LEFT_SPELL_IS_FLASH=true

# Debugging option. Prints extra information when executed with a terminal
DEBUG=false